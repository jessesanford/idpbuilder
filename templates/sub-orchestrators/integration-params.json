{
  "_comment": "Template for INTEGRATION sub-orchestrator parameters",
  "sub_orchestrator_type": "INTEGRATION",
  "unique_id": "GENERATE_UUID_HERE",
  "master_state_file": "orchestrator-state.json",
  "input_parameters": {
    "integration_type": "WAVE|PHASE|PROJECT",
    "branches_to_merge": [
      "effort-branch-1",
      "effort-branch-2",
      "effort-branch-3"
    ],
    "target_branch": "integration-target-branch",
    "base_branch": "main|phase-integration|wave-integration",
    "validation_level": "BASIC|FULL|COMPREHENSIVE",
    "validation_requirements": {
      "syntax_check": true,
      "linting": true,
      "unit_tests": true,
      "integration_tests": true,
      "performance_tests": false,
      "security_scan": false,
      "e2e_tests": false
    },
    "conflict_resolution": "MANUAL|AUTO_THEIRS|AUTO_OURS|INTERACTIVE",
    "merge_strategy": "SEQUENTIAL|OCTOPUS|RECURSIVE",
    "merge_options": {
      "no_fast_forward": true,
      "squash": false,
      "sign_commits": false,
      "preserve_merge_commits": true
    },
    "build_configuration": {
      "build_required": true,
      "build_command": "npm run build",
      "build_timeout": 600,
      "fail_on_warning": false
    },
    "test_configuration": {
      "test_required": true,
      "test_command": "npm test",
      "test_timeout": 1200,
      "coverage_required": true,
      "coverage_threshold": 80,
      "test_parallel": true
    },
    "rollback_strategy": {
      "auto_rollback_on_failure": true,
      "preserve_failed_branch": true,
      "create_diagnostic_branch": true
    }
  },
  "output_location": "/tmp/sub-orch-UUID/output.json",
  "heartbeat_file": "/tmp/sub-orch-UUID/heartbeat.json",
  "checkpoint_file": "/tmp/sub-orch-UUID/checkpoint.json",
  "log_file": "/tmp/sub-orch-UUID.log",
  "max_duration_seconds": 7200,
  "checkpoint_interval": 30,
  "resource_limits": {
    "max_memory_mb": 4096,
    "max_cpu_percent": 90,
    "max_disk_mb": 1000
  },
  "monitoring": {
    "heartbeat_interval": 30,
    "progress_update_interval": 60,
    "detailed_logging": true,
    "capture_merge_output": true
  },
  "recovery": {
    "max_retries": 2,
    "retry_delay_seconds": 600,
    "checkpoint_on_error": true,
    "preserve_artifacts_on_failure": true,
    "escalate_on_conflict": true
  }
}