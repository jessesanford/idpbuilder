# Demo Configuration for Gitea Client Split-002
# This file enables demo mode and provides default settings

DEMO_MODE=true
DEMO_REGISTRY_URL=https://gitea.local:3000
DEMO_SIMULATION=true

# Integration with Split-001
AUTH_SPLIT_001_AVAILABLE=true
TLS_SPLIT_001_INTEGRATION=true

# Demo performance settings
CHUNK_SIZE=5MB
MAX_RETRIES=5
PROGRESS_ENABLED=true

# Feature flags for demo
REGISTRY_PUSH_ENABLED=true
REGISTRY_LIST_ENABLED=true
REGISTRY_RETRY_ENABLED=true
REGISTRY_DELETE_ENABLED=true

# Demo timing (for realistic simulation)
UPLOAD_SIMULATION_DELAY=0.5s
RETRY_SIMULATION_DELAY=1s
PROGRESS_UPDATE_INTERVAL=0.2s

# Safety settings
DEMO_SAFE_MODE=true
REQUIRE_CONFIRM_DELETE=true
DRY_RUN_MODE=false

# Version information
DEMO_VERSION=1.0.0
SPLIT_VERSION=002
INTEGRATION_VERSION=2.1.0